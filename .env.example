# Supabase Configuration
SUPABASE_URL=your_supabase_project_url
SUPABASE_ANON_KEY=your_supabase_anon_key
SUPABASE_SERVICE_ROLE_KEY=your_supabase_service_role_key
SUPABASE_BUCKET_NAME=uploads

# Database Configuration (for sessions)
# Use the same PostgreSQL connection from Supabase
# Format: postgresql://[user]:[password]@[host]:[port]/[database]
DATABASE_URL=postgresql://postgres:[YOUR_PASSWORD]@db.adgxouvmnkhcqfyyfrfo.supabase.co:5432/postgres

# Claude API Configuration
ANTHROPIC_API_KEY=your_anthropic_api_key

# Server Configuration
PORT=3000
BASE_URL=http://localhost:3000

# Session Configuration
SESSION_SECRET=your_random_secret_key_here_change_this_in_production

# Google OAuth Configuration
GOOGLE_CLIENT_ID=your_google_client_id
GOOGLE_CLIENT_SECRET=your_google_client_secret
# The callback URL will be: http://localhost:3000/auth/google/callback
# For production: https://yourdomain.com/auth/google/callback

# Upload Configuration (in MB)
MAX_FILE_SIZE_MB=10

# Mercado Pago OAuth Configuration
MERCADOPAGO_CLIENT_ID=your_mercadopago_client_id
MERCADOPAGO_CLIENT_SECRET=your_mercadopago_client_secret
# The callback URL is determined by BASE_URL above
# Make sure BASE_URL matches the redirect URI configured in Mercado Pago
# Development: http://localhost:3000
# Production: https://yourdomain.com

# Enable Banking (EuBanks) Configuration
EUBANKS_APP_ID=your_enable_banking_app_id
EUBANKS_PRIVATE_KEY_PATH=./db/your_app_id.pem
EUBANKS_ENV=production
# The callback URL is determined by BASE_URL above
# Development: http://localhost:3000/oauth/eubanks/callback
# Production: https://yourdomain.com/oauth/eubanks/callback
