      </div>
    </nav>

    <!-- Main Content -->
    <div class="main-content">
      <!-- Inicio Section -->
      <section id="section-inicio" class="content-section active">
        <div class="section-header">
          <h1>Dashboard</h1>
          <p>Resumen de tu actividad financiera</p>
        </div>

        <div class="stats-grid">
          <div class="stat-card">
            <div class="stat-icon"></div>
            <div class="stat-value" id="total-files">0</div>
            <div class="stat-label">Archivos Cargados</div>
          </div>

          <div class="stat-card">
            <div class="stat-icon"></div>
            <div class="stat-value" id="total-transactions">0</div>
            <div class="stat-label">Transacciones</div>
          </div>

          <div class="stat-card">
            <div class="stat-icon"></div>
            <div class="stat-value" id="total-veps">0</div>
            <div class="stat-label">VEPs Procesados</div>
          </div>

          <div class="stat-card">
            <div class="stat-icon"></div>
            <div class="stat-value">$0</div>
            <div class="stat-label">Balance Total</div>
          </div>
        </div>

        <div class="recent-activity">
          <h2>Actividad Reciente</h2>
          <div class="activity-list" id="recent-files">
            <p>No hay actividad reciente</p>
          </div>
        </div>
      </section>

      <!-- Transacciones Section -->
      <section id="section-transacciones" class="content-section">
        <div class="section-header">
          <h1>Transacciones</h1>
          <p>Visualiza todas tus transacciones</p>
        </div>

        <div id="all-transactions-container">
          <p>Cargando transacciones...</p>
        </div>
      </section>

      <!-- Archivos Section -->
      <section id="section-archivos" class="content-section">
        <div class="section-header">
          <h1>Gesti贸n de Archivos</h1>
          <p>Sube y administra tus documentos financieros</p>
        </div>

        <div class="upload-section">
          <div class="upload-card">
            <form id="upload-form" enctype="multipart/form-data">
              <div class="upload-area">
                <div class="upload-icon"></div>
                <h3>Arrastra archivos aqu铆</h3>
                <p>o haz clic para seleccionar</p>
                <p class="file-types">Archivos permitidos: <%= allowedTypes %></p>
                <p class="file-size">Tama帽o m谩ximo: <%= maxSizeMB %>MB</p>
                <input type="file" id="file-input" name="file" accept="<%= allowedTypes %>" style="display: none;">
                <button type="button" class="select-file-btn" id="select-file-btn">Seleccionar Archivo</button>
              </div>

              <div id="file-selected" class="file-preview" style="display: none;">
                <div class="file-info">
                  <span class="file-name" id="selected-file-name"></span>
                  <span class="file-size" id="selected-file-size"></span>
                </div>
                <button type="submit" class="upload-btn" id="upload-btn">Subir Archivo</button>
              </div>

              <div id="upload-progress" style="display: none;">
                <div class="progress-bar">
                  <div class="progress-fill" id="progress-fill"></div>
                </div>
                <p class="progress-text" id="progress-text">Subiendo...</p>
              </div>

              <div id="upload-message"></div>
            </form>
          </div>
        </div>

        <div class="files-section">
          <h2>Archivos Cargados</h2>
          <div class="files-list" id="files-list">
            <p>No hay archivos cargados a煤n</p>
          </div>
        </div>
      </section>

      <!-- Calendario Section -->
      <section id="section-calendario" class="content-section">
        <div class="section-header">
          <h1>Calendario</h1>
          <p>Pr贸ximamente: visualiza tus pagos y vencimientos</p>
        </div>
        <div class="coming-soon">
          <span class="emoji"></span>
          <h2>Calendario Financiero</h2>
          <p>Esta funcionalidad estar谩 disponible pr贸ximamente</p>
        </div>
      </section>

      <!-- Configuraci贸n Section -->
      <section id="section-configuracion" class="content-section">
        <div class="section-header">
          <h1>Configuraci贸n</h1>
          <p>Administra tu cuenta y preferencias</p>
        </div>

        <div class="settings-container">
          <div class="settings-card">
            <h3>Cuenta</h3>
            <div class="setting-item">
              <label>Email</label>
              <p id="settings-email">email@example.com</p>
            </div>
            <div class="setting-item">
              <label>Nombre</label>
              <p id="settings-name">Usuario</p>
            </div>
            <button id="logout-btn" class="btn-danger">Cerrar Sesi贸n</button>
          </div>
        </div>
      </section>
    </div>
  </div>

  <script>
    // Initialize Supabase
    const supabaseUrl = '<%= supabaseUrl %>';
    const supabaseAnonKey = '<%= supabaseAnonKey %>';
    const { createClient } = supabase;
    const supabaseClient = createClient(supabaseUrl, supabaseAnonKey);

    let currentUser = null;
    let accessToken = null;

    // Auth state management
    async function checkAuth() {
      const { data: { session } } = await supabaseClient.auth.getSession();

      if (session) {
        currentUser = session.user;
        accessToken = session.access_token;
        showApp();
        loadUserData();
      } else {
        showLogin();
      }

      document.getElementById('auth-loading').style.display = 'none';
    }

    function showLogin() {
      document.getElementById('login-screen').style.display = 'block';
      document.getElementById('app-content').style.display = 'none';
    }

    function showApp() {
      document.getElementById('login-screen').style.display = 'none';
      document.getElementById('app-content').style.display = 'block';
    }

    // Google login
    document.getElementById('google-login-btn').addEventListener('click', async () => {
      try {
        const { data, error } = await supabaseClient.auth.signInWithOAuth({
          provider: 'google',
          options: {
            redirectTo: window.location.origin
          }
        });

        if (error) throw error;
      } catch (error) {
        console.error('Login error:', error);
        const errorDiv = document.getElementById('login-error');
        errorDiv.textContent = 'Error al iniciar sesi贸n: ' + error.message;
        errorDiv.style.display = 'block';
      }
    });

    // Logout
    document.getElementById('logout-btn').addEventListener('click', async () => {
      await supabaseClient.auth.signOut();
      window.location.reload();
    });

    document.getElementById('user-menu').addEventListener('click', async (e) => {
      e.preventDefault();
      if (confirm('驴Deseas cerrar sesi贸n?')) {
        await supabaseClient.auth.signOut();
        window.location.reload();
      }
    });

    // Load user data
    function loadUserData() {
      if (!currentUser) return;

      const name = currentUser.user_metadata?.full_name || currentUser.email;
      const email = currentUser.email;
      const avatar = name.charAt(0).toUpperCase();

      document.getElementById('user-name').textContent = name;
      document.getElementById('user-email').textContent = email;
      document.getElementById('user-avatar').textContent = avatar;
      document.getElementById('settings-name').textContent = name;
      document.getElementById('settings-email').textContent = email;

      loadDashboardData();
    }

    // Initialize auth check
    checkAuth();

    // Listen for auth changes
    supabaseClient.auth.onAuthStateChange((event, session) => {
      if (event === 'SIGNED_IN') {
        currentUser = session.user;
        accessToken = session.access_token;
        showApp();
        loadUserData();
      } else if (event === 'SIGNED_OUT') {
        currentUser = null;
        accessToken = null;
        showLogin();
      }
    });
  </script>
  <script src="/js/upload-supabase.js"></script>
</body>
</html>
