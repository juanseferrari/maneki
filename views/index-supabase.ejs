  <script>
    // Initialize Supabase
    const supabaseUrl = '<%= supabaseUrl %>';
    const supabaseAnonKey = '<%= supabaseAnonKey %>';
    const { createClient } = supabase;
    const supabaseClient = createClient(supabaseUrl, supabaseAnonKey);

    // Use global variables from upload-supabase.js
    // currentUser and accessToken are declared in upload-supabase.js

    // Check if we're in dev mode (user is passed from server)
    <% const isDevMode = typeof user !== 'undefined'; %>
    isDev = <%= isDevMode %>;
    <% if (typeof user !== 'undefined') { %>
    currentUser = {
      id: '<%= user.id %>',
      email: '<%= user.email %>',
      user_metadata: <%- JSON.stringify(user.user_metadata || {}) %>
    };
    <% } %>

    // Auth state management
    async function checkAuth() {
      // In dev mode, we still want to check for session to get updated user data
      const { data: { session } } = await supabaseClient.auth.getSession();

      if (session) {
        // Update currentUser with fresh session data
        currentUser = session.user;
        accessToken = session.access_token;
        showApp();
        loadUserData();
      } else if (isDev) {
        // In dev mode, show app even without session
        showApp();
        loadUserData();
      } else {
        showLogin();
      }

      document.getElementById('auth-loading').style.display = 'none';
    }

    function showLogin() {
      document.getElementById('login-screen').style.display = 'block';
      document.getElementById('app-content').style.display = 'none';
    }

    function showApp() {
      document.getElementById('login-screen').style.display = 'none';
      document.getElementById('app-content').style.display = 'block';
    }

    // Google login
    document.getElementById('google-login-btn').addEventListener('click', async () => {
      try {
        const { data, error } = await supabaseClient.auth.signInWithOAuth({
          provider: 'google',
          options: {
            redirectTo: window.location.origin
          }
        });

        if (error) throw error;
      } catch (error) {
        console.error('Login error:', error);
        const errorDiv = document.getElementById('login-error');
        errorDiv.textContent = 'Error al iniciar sesi贸n: ' + error.message;
        errorDiv.style.display = 'block';
      }
    });

    // User menu toggle
    const userMenuBtn = document.getElementById('user-menu-btn');
    const userMenuDropdown = document.getElementById('user-menu-dropdown');

    userMenuBtn.addEventListener('click', (e) => {
      e.stopPropagation();
      userMenuDropdown.classList.toggle('active');
    });

    // Close user menu when clicking outside
    document.addEventListener('click', (e) => {
      if (!userMenuBtn.contains(e.target) && !userMenuDropdown.contains(e.target)) {
        userMenuDropdown.classList.remove('active');
      }
    });

    // Logout
    document.getElementById('logout-btn').addEventListener('click', async () => {
      const confirmed = await showCustomModal({
        title: 'Cerrar sesi贸n',
        message: '驴Est谩s seguro de que quieres cerrar sesi贸n?',
        type: 'info',
        confirmText: 'Cerrar sesi贸n',
        cancelText: 'Cancelar',
        danger: false
      });

      if (confirmed) {
        await supabaseClient.auth.signOut();
        window.location.reload();
      }
    });

    // Load user data
    function loadUserData() {
      if (!currentUser) return;

      const name = currentUser.user_metadata?.full_name || currentUser.email;
      const email = currentUser.email;
      const avatarUrl = currentUser.user_metadata?.avatar_url || currentUser.user_metadata?.picture;
      const avatarInitial = name.charAt(0).toUpperCase();

      // Update sidebar user info
      document.getElementById('user-name').textContent = name;
      document.getElementById('user-email').textContent = email;

      const userAvatarEl = document.getElementById('user-avatar');
      if (avatarUrl) {
        userAvatarEl.innerHTML = `<img src="${avatarUrl}" alt="${name}" style="width: 100%; height: 100%; border-radius: 50%; object-fit: cover;">`;
      } else {
        userAvatarEl.textContent = avatarInitial;
      }

      // Update user menu dropdown
      document.getElementById('user-menu-name').textContent = name;
      document.getElementById('user-menu-email').textContent = email;

      const userMenuAvatarEl = document.getElementById('user-menu-avatar');
      if (avatarUrl) {
        userMenuAvatarEl.innerHTML = `<img src="${avatarUrl}" alt="${name}" style="width: 100%; height: 100%; border-radius: 50%; object-fit: cover;">`;
      } else {
        userMenuAvatarEl.textContent = avatarInitial;
      }

      loadDashboardData();
    }

    // Initialize auth check
    checkAuth();

    // Listen for auth changes
    supabaseClient.auth.onAuthStateChange((event, session) => {
      if (event === 'SIGNED_IN') {
        currentUser = session.user;
        accessToken = session.access_token;
        showApp();
        loadUserData();
      } else if (event === 'SIGNED_OUT') {
        currentUser = null;
        accessToken = null;
        showLogin();
      }
    });
  </script>
</body>
