<!-- Archivos Section -->
<section id="section-archivos" class="content-section">
  <div class="section-header">
    <h1>Archivos</h1>
    <p>Sube y administra tus documentos financieros</p>
  </div>

  <form id="upload-form" enctype="multipart/form-data">
    <div class="upload-area" id="upload-area">
      <div class="upload-icon">üì§</div>
      <h3>Arrastra archivos aqu√≠</h3>
      <p>o haz clic para seleccionar</p>
      <p class="file-types">Archivos permitidos: <%= allowedTypes %></p>
      <p class="file-size">Tama√±o maximo: <%= maxSizeMB %>MB</p>
      <input type="file" id="file-input" name="file" accept="<%= allowedTypes %>" style="display: none;">
      <button type="button" class="select-file-btn" id="select-file-btn">Seleccionar Archivo</button>
    </div>

    <div id="upload-progress" style="display: none;">
      <div class="progress-bar">
        <div class="progress-fill" id="progress-fill"></div>
      </div>
      <p class="progress-text" id="progress-text">Subiendo...</p>
    </div>

    <div id="upload-message"></div>
  </form>

  <!-- Files Table Section -->
  <div class="files-table-section">
    <div class="files-table-header">
      <h3>Mis Archivos</h3>
    </div>

    <!-- Loading State -->
    <div class="files-loading" id="files-loading">
      <div class="spinner"></div>
      <span>Cargando archivos...</span>
    </div>

    <!-- Empty State -->
    <div class="files-empty" id="files-empty" style="display: none;">
      <svg width="64" height="64" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="1">
        <path d="M14 2H6a2 2 0 0 0-2 2v16a2 2 0 0 0 2 2h12a2 2 0 0 0 2-2V8z"></path>
        <polyline points="14 2 14 8 20 8"></polyline>
      </svg>
      <p>No hay archivos cargados</p>
      <span>Sube archivos arrastrandolos o haciendo clic en el area de arriba</span>
    </div>

    <!-- Files Table -->
    <div class="files-table-container" id="files-table-container" style="display: none;">
      <table class="files-table">
        <thead>
          <tr>
            <th>Nombre</th>
            <th>Tipo</th>
            <th>Tama√±o</th>
            <th>Transacciones</th>
            <th>Fecha</th>
            <th>Acciones</th>
          </tr>
        </thead>
        <tbody id="files-table-body">
          <!-- Files will be loaded here -->
        </tbody>
      </table>
    </div>
  </div>
</section>
