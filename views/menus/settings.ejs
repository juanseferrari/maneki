<!-- Conexiones Section -->
<section id="section-conexiones" class="content-section">
  <div class="section-header">
    <h1>Conexiones</h1>
    <p>Conecta tus cuentas bancarias y servicios de pago</p>
  </div>

  <!-- Active Connections -->
  <div id="active-connections-section" style="display: none;">
    <h2 class="connections-subsection-title">Conexiones Activas</h2>
    <div id="active-connections-container" class="connections-container">
      <!-- Active connections will be inserted here by JS -->
    </div>
  </div>

  <!-- Available Connections -->
  <div id="available-connections-section">
    <h2 class="connections-subsection-title">Conexiones Disponibles</h2>
    <div id="available-connections-container" class="connections-container">
      <!-- Template cards that will be moved by JS -->
      <div class="connection-card" id="mercadopago-card" data-provider="mercadopago">
      <div class="connection-header">
        <div class="connection-icon mercadopago-icon">
          <img src="/images/mercadopago.png" alt="Mercado Pago" />
        </div>
        <div class="connection-info">
          <h3>Mercado Pago</h3>
          <p class="connection-status disconnected" id="mercadopago-status">No conectado</p>
          <div class="connection-user-info" id="mercadopago-user-info" style="display: none;">
            <div class="connection-user-avatar" id="mercadopago-avatar"></div>
            <div class="connection-user-details">
              <p class="connection-user-email" id="mercadopago-email"></p>
              <p class="connection-last-sync" id="mercadopago-last-sync"></p>
            </div>
          </div>
        </div>
      </div>
      <p class="connection-description">Conecta tu cuenta de Mercado Pago para importar transacciones automáticamente</p>
      <div class="connection-actions">
        <button class="btn-connection" id="mercadopago-btn" onclick="connectMercadoPago()">Conectar Mercado Pago</button>
        <button class="btn-sync" id="mercadopago-sync-btn" onclick="syncMercadoPago()" style="display: none;">
          <svg width="16" height="16" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2">
            <polyline points="23 4 23 10 17 10"></polyline>
            <path d="M20.49 15a9 9 0 1 1-2.12-9.36L23 10"></path>
          </svg>
          Sincronizar
        </button>
        <button class="btn-disconnect" id="mercadopago-disconnect-btn" onclick="disconnectProvider('mercadopago')" style="display: none;">Desconectar</button>
      </div>
    </div>

    <div class="connection-card" id="mercury-card" data-provider="mercury">
      <div class="connection-header">
        <div class="connection-icon mercury-icon">
          <svg width="40" height="40" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2">
            <rect x="1" y="4" width="22" height="16" rx="2" ry="2"></rect>
            <line x1="1" y1="10" x2="23" y2="10"></line>
          </svg>
        </div>
        <div class="connection-info">
          <h3>Mercury</h3>
          <p class="connection-status disconnected" id="mercury-status">No conectado</p>
          <div class="connection-user-info" id="mercury-user-info" style="display: none;">
            <div class="connection-user-avatar" id="mercury-avatar"></div>
            <div class="connection-user-details">
              <p class="connection-user-email" id="mercury-email"></p>
              <p class="connection-last-sync" id="mercury-last-sync"></p>
            </div>
          </div>
        </div>
      </div>
      <p class="connection-description">Conecta tu cuenta Mercury (banco de EE.UU.) para importar transacciones automáticamente</p>
      <div class="connection-actions">
        <button class="btn-connection" id="mercury-btn" onclick="connectMercury()">Conectar Mercury</button>
        <button class="btn-sync" id="mercury-sync-btn" onclick="syncMercury()" style="display: none;">
          <svg width="16" height="16" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2">
            <polyline points="23 4 23 10 17 10"></polyline>
            <path d="M20.49 15a9 9 0 1 1-2.12-9.36L23 10"></path>
          </svg>
          Sincronizar
        </button>
        <button class="btn-disconnect" id="mercury-disconnect-btn" onclick="disconnectProvider('mercury')" style="display: none;">Desconectar</button>
      </div>
    </div>

    <div class="connection-card" id="eubanks-card" data-provider="eubanks">
      <div class="connection-header">
        <div class="connection-icon">
          <svg width="40" height="40" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2">
            <path d="M3 9l9-7 9 7v11a2 2 0 0 1-2 2H5a2 2 0 0 1-2-2z"></path>
            <polyline points="9 22 9 12 15 12 15 22"></polyline>
          </svg>
        </div>
        <div class="connection-info">
          <h3>Bancos Europeos</h3>
          <p class="connection-status disconnected" id="eubanks-status">No conectado</p>
          <div class="connection-user-info" id="eubanks-user-info" style="display: none;">
            <div class="connection-user-avatar" id="eubanks-avatar"></div>
            <div class="connection-user-details">
              <p class="connection-user-email" id="eubanks-email"></p>
              <p class="connection-last-sync" id="eubanks-last-sync"></p>
            </div>
          </div>
        </div>
      </div>
      <p class="connection-description">Conecta tus cuentas bancarias europeas para sincronizar movimientos</p>
      <div class="connection-actions">
        <button class="btn-connection" id="eubanks-btn" onclick="connectEuBank()">Conectar Banco</button>
      </div>
    </div>

      <div class="connection-card disabled">
        <div class="connection-header">
          <div class="connection-icon">
            <svg width="40" height="40" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2">
              <circle cx="12" cy="12" r="10"></circle>
              <line x1="12" y1="8" x2="12" y2="12"></line>
              <line x1="12" y1="16" x2="12.01" y2="16"></line>
            </svg>
          </div>
          <div class="connection-info">
            <h3>Más Conexiones</h3>
            <p class="connection-status">Próximamente</p>
          </div>
        </div>
        <p class="connection-description">Más integraciones disponibles pronto</p>
      </div>
    </div>
  </div>
</section>

<!-- Sync Result Modal -->
<div class="custom-modal-overlay" id="sync-result-modal">
  <div class="custom-modal sync-result-modal">
    <div class="custom-modal-header">
      <div class="custom-modal-icon" id="sync-result-icon">
        <svg width="24" height="24" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2">
          <polyline points="23 4 23 10 17 10"></polyline>
          <path d="M20.49 15a9 9 0 1 1-2.12-9.36L23 10"></path>
        </svg>
      </div>
      <h3 class="custom-modal-title" id="sync-result-title">Sincronizacion Completa</h3>
    </div>
    <p class="custom-modal-message" id="sync-result-message">
      <!-- Message will be inserted here -->
    </p>
    <div class="sync-result-details" id="sync-result-details">
      <!-- Details will be inserted here -->
    </div>
    <div class="custom-modal-actions">
      <button type="button" class="custom-modal-btn btn-confirm" onclick="closeSyncResultModal()">Aceptar</button>
    </div>
  </div>
</div>
