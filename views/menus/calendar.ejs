<!-- Calendario Section -->
<section id="section-calendario" class="content-section">
  <div class="section-header">
    <h1>Calendario Financiero</h1>
    <p>Visualiza tus pagos y vencimientos</p>
  </div>

  <div class="calendar-page-grid">
    <!-- Main Calendar -->
    <div class="calendar-main">
      <div class="calendar-header">
        <button class="calendar-nav-btn" onclick="changeCalendarMonth(-1)">
          <svg width="20" height="20" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2">
            <polyline points="15 18 9 12 15 6"></polyline>
          </svg>
        </button>
        <h3 id="calendar-page-month-title">Diciembre 2024</h3>
        <button class="calendar-nav-btn" onclick="changeCalendarMonth(1)">
          <svg width="20" height="20" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2">
            <polyline points="9 18 15 12 9 6"></polyline>
          </svg>
        </button>
      </div>

      <div class="calendar-grid-large">
        <div class="calendar-weekdays">
          <span>Dom</span>
          <span>Lun</span>
          <span>Mar</span>
          <span>Mié</span>
          <span>Jue</span>
          <span>Vie</span>
          <span>Sáb</span>
        </div>
        <div class="calendar-days-large" id="calendar-page-days">
          <!-- Days will be generated by JS -->
        </div>
      </div>
    </div>

    <!-- Sidebar with upcoming payments and selected day -->
    <div class="calendar-sidebar">
      <!-- Selected Day Details -->
      <div class="calendar-selected-day" id="calendar-selected-day">
        <h3 id="calendar-selected-day-title">Selecciona un día</h3>
        <div class="calendar-selected-day-content" id="calendar-selected-day-content">
          <p class="no-selection">Haz clic en un día para ver los pagos programados</p>
        </div>
      </div>

      <!-- Month Summary -->
      <div class="calendar-month-summary">
        <h3>Resumen del Mes</h3>
        <div class="month-summary-stats" id="calendar-month-summary">
          <div class="summary-stat">
            <span class="stat-label">Total de pagos</span>
            <span class="stat-value" id="month-total-payments">-</span>
          </div>
          <div class="summary-stat">
            <span class="stat-label">Cantidad de servicios</span>
            <span class="stat-value" id="month-services-count">-</span>
          </div>
        </div>
      </div>

      <!-- Upcoming Payments -->
      <div class="calendar-upcoming">
        <h3>Próximos 7 días</h3>
        <div class="calendar-upcoming-list" id="calendar-upcoming-list">
          <!-- Will be populated by JS -->
        </div>
      </div>
    </div>
  </div>
</section>
